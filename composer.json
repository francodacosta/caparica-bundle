{
    "name": "francodacosta/caparica-bundle",
    "type": "library",
    "description": "a symfony bundle to help secure your REST api with signed requests",
    "keywords": ["REST", "API", "secure", "hmac"],
    "homepage": "https://github.com/francodacosta/caparica-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Nuno Costa",
            "email": "nuno@francodacosta.com",
            "homepage": "http://www.francodacosta.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "francodacosta/caparica": "dev-master"

    },

    "require-dev": {
        "mockery/mockery": "dev-master@dev"
    },

    "suggests" : {
        "francodacosta/caparica-guzzle-plugin": "to automaticaly sign HTTP requests"
    },

    "autoload": {
        "psr-0": {
            "Francodacosta": "src/"
        }
    }

}
